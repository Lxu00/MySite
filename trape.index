<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Debug Tool</title>
  <style>
    body {font-family: Arial; background: #111; color: #0f0; text-align: center; padding: 2rem;}
    input, button {padding: 1rem; font-size: 1.2rem; margin: 1rem;}
    #map {width: 100%; height: 400px; margin: 2rem 0; border: 2px solid #0f0;}
    .result {background: #000; padding: 1rem; margin: 1rem; border: 1px solid #0f0; text-align: left; font-family: monospace;}
    .hidden {display: none;}
  </style>
</head>
<body>
  <h1>IP Tracer v2</h1>
  <input type="text" id="ip" placeholder="Enter IP to trace..." style="width: 300px;">
  <button onclick="trace()">TRACE</button>
  <div id="result" class="hidden"></div>
  <div id="map"></div>

  <script>
    const WEBHOOK = 'https://discord.com/api/webhooks/1381021459350032484/Z-HEIw2n1czbqpnWl-UicGzWgfrHth3W0naPyAkIoI3Sf3bx4bsINYQJDnvIHf1ky0tL';

    async function trace() {
      const ip = document.getElementById('ip').value.trim();
      if (!ip) return alert('Enter IP');

      const res = await fetch(`https://ipapi.co/${ip}/json/`);
      const data = await res.json();

      if (data.error) return alert('Invalid IP');

      // Show result
      const r = document.getElementById('result');
      r.classList.remove('hidden');
      r.innerHTML = `
        <b>IP:</b> ${data.ip}<br>
        <b>Location:</b> ${data.city}, ${data.region}, ${data.country_name}<br>
        <b>ISP:</b> ${data.org}<br>
        <b>Coords:</b> ${data.latitude}, ${data.longitude}<br>
        <b>Hostname:</b> ${data.hostname || 'N/A'}<br>
        <b>Threat:</b> ${data.threat?.is_tor ? 'TOR' : data.threat?.is_proxy ? 'PROXY' : 'Clean'}
      `;

      // Init map
      const map = L.map('map').setView([data.latitude, data.longitude], 13);
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
      L.marker([data.latitude, data.longitude]).addTo(map)
        .bindPopup(`<b>${data.ip}</b><br>${data.city}, ${data.country_name}`).openPopup();

      // Send to Discord
      const embed = {
        title: 'IP Traced by Admin',
        color: 0xff0000,
        fields: [
          {name: 'Target IP', value: data.ip, inline: true},
          {name: 'Location', value: `${data.city}, ${data.country_name}`, inline: true},
          {name: 'ISP', value: data.org, inline: true},
          {name: 'Coords', value: `${data.latitude}, ${data.longitude}`, inline: true},
          {name: 'Threat', value: data.threat?.is_tor ? 'TOR' : data.threat?.is_proxy ? 'PROXY' : 'Clean', inline: true}
        ],
        timestamp: new Date().toISOString()
      };

      fetch(WEBHOOK, {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({embeds: [embed]})
      });
    }
  </script>
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"/>
</body>
</html>
